{
	"name": "Ubuntu Shift",
	"dockerComposeFile": "./docker.compose.yml",
	"service": "vscode-container",
	"workspaceFolder": "/workspace",
	"shutdownAction": "stopCompose",
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.vscode-pull-request-github",
				"Prisma.prisma",
				"pflannery.vscode-versionlens",
				"github.vscode-github-actions",
				"bradlc.vscode-tailwindcss",
				"trivadis.ngtvd-extensions",
				"GitHub.copilot",
				"GitHub.copilot-chat"
			]
		}
	},
	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y chromium libxss1 libnss3 libasound2 libatk-bridge2.0-0 libgtk-3-0 libgbm-dev",
	"postStartCommand": "npm install -g @angular/cli && git config --global --add safe.directory /workspace"
}